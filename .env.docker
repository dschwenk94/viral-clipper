# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=clippy-docker-dev-key-change-in-production

# Redis
REDIS_URL=redis://redis:6379/0

# YouTube OAuth (from Google Console)
# YOUTUBE_CLIENT_ID=your-client-id
# YOUTUBE_CLIENT_SECRET=your-client-secret
YOUTUBE_REDIRECT_URI=http://localhost:5000/oauth/callback

# OpenAI (if using GPT for captions)
# OPENAI_API_KEY=your-openai-key

# Video Processing
MAX_VIDEO_SIZE_MB=500
MAX_CLIP_DURATION=60
CLIPS_STORAGE_PATH=/app/clips
TEMP_STORAGE_PATH=/app/temp

# Performance
WORKER_THREADS=4
MAX_CONCURRENT_JOBS=3